# =============================================================================
# Desktop RAG Platform Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your setup
# Supports: LOCAL, HYBRID, AZURE modes

# =============================================================================
# Deployment Mode
# =============================================================================
# Options: local, hybrid, azure
RAG_DEPLOYMENT_MODE=local

# =============================================================================
# Provider Selection (auto-configured based on mode, override if needed)
# =============================================================================
# LLM: ollama, azure_openai, openai
# RAG_LLM_PROVIDER=ollama

# Vector DB: chromadb, azure_search, qdrant
# RAG_VECTOR_DB_PROVIDER=chromadb

# Database: sqlite, cosmos_db
# RAG_DATABASE_PROVIDER=sqlite

# Storage: local, azure_blob
# RAG_STORAGE_PROVIDER=local

# =============================================================================
# LOCAL Mode - Ollama Settings
# =============================================================================
RAG_OLLAMA__BASE_URL=http://localhost:11434
RAG_OLLAMA__MODEL=llama3.2
RAG_OLLAMA__EMBEDDING_MODEL=nomic-embed-text
RAG_OLLAMA__TIMEOUT=120

# =============================================================================
# LOCAL Mode - ChromaDB Settings
# =============================================================================
RAG_CHROMADB__PERSIST_DIRECTORY=./data/chromadb
RAG_CHROMADB__COLLECTION_NAME=rag_documents

# =============================================================================
# LOCAL Mode - SQLite Settings
# =============================================================================
RAG_SQLITE__DATABASE_PATH=./data/rag.db

# =============================================================================
# LOCAL Mode - Local Storage Settings
# =============================================================================
RAG_LOCAL_STORAGE__BASE_PATH=./data/documents
RAG_LOCAL_STORAGE__PROCESSED_PATH=./data/processed
RAG_LOCAL_STORAGE__MAX_FILE_SIZE_MB=100

# =============================================================================
# Anthropic Claude Settings (Alternative LLM)
# =============================================================================
# Use Claude instead of Azure OpenAI or Ollama
# RAG_LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-your-api-key-here
# RAG_ANTHROPIC__API_KEY=${ANTHROPIC_API_KEY}
# RAG_ANTHROPIC__MODEL=claude-sonnet-4-20250514
# RAG_ANTHROPIC__TIMEOUT=120
# Note: Claude doesn't provide embeddings, so you still need an embedding provider
# RAG_ANTHROPIC__EMBEDDING_PROVIDER=azure_openai  # or "openai", "ollama"

# =============================================================================
# HYBRID/AZURE Mode - Azure OpenAI Settings
# =============================================================================
# Uncomment and configure for hybrid/azure mode
# AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-api-key-here
# RAG_AZURE_OPENAI__ENDPOINT=${AZURE_OPENAI_ENDPOINT}
# RAG_AZURE_OPENAI__API_KEY=${AZURE_OPENAI_API_KEY}
# RAG_AZURE_OPENAI__API_VERSION=2024-02-15-preview
# RAG_AZURE_OPENAI__CHAT_DEPLOYMENT=gpt-4o-mini
# RAG_AZURE_OPENAI__EMBEDDING_DEPLOYMENT=text-embedding-3-large
# RAG_AZURE_OPENAI__USE_MANAGED_IDENTITY=false

# =============================================================================
# AZURE Mode - Azure AI Search Settings
# =============================================================================
# Uncomment and configure for azure mode
# AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
# AZURE_SEARCH_API_KEY=your-search-key-here
# RAG_AZURE_SEARCH__ENDPOINT=${AZURE_SEARCH_ENDPOINT}
# RAG_AZURE_SEARCH__API_KEY=${AZURE_SEARCH_API_KEY}
# RAG_AZURE_SEARCH__INDEX_NAME=rag-multimodal-index

# =============================================================================
# AZURE Mode - Cosmos DB Settings
# =============================================================================
# Uncomment and configure for azure mode
# COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/
# COSMOS_KEY=your-cosmos-key-here
# RAG_COSMOS_DB__ENDPOINT=${COSMOS_ENDPOINT}
# RAG_COSMOS_DB__KEY=${COSMOS_KEY}
# RAG_COSMOS_DB__DATABASE_NAME=rag_platform
# RAG_COSMOS_DB__CONTAINER_NAME=conversations

# =============================================================================
# AZURE Mode - Azure Blob Storage Settings
# =============================================================================
# Uncomment and configure for azure mode
# AZURE_STORAGE_ACCOUNT_URL=https://yourstorage.blob.core.windows.net
# RAG_AZURE_BLOB__ACCOUNT_URL=${AZURE_STORAGE_ACCOUNT_URL}
# RAG_AZURE_BLOB__CONTAINER_NAME=documents
# RAG_AZURE_BLOB__USE_MANAGED_IDENTITY=false

# =============================================================================
# API Settings
# =============================================================================
RAG_API_HOST=0.0.0.0
RAG_API_PORT=8000
# RAG_API_KEY=your-optional-api-key

# CORS origins (comma-separated)
# RAG_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# RAG Settings
# =============================================================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5
RAG_MIN_RELEVANCE_SCORE=0.5

# =============================================================================
# Logging
# =============================================================================
RAG_LOG_LEVEL=INFO
# RAG_LOG_FILE=./logs/rag.log

# =============================================================================
# OpenTelemetry (Optional)
# =============================================================================
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_SERVICE_NAME=desktop-rag-api
