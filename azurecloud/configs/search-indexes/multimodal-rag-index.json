  "scoringProfiles": [
    {
      "name": "boost-tables",
      "text": {
        "weights": {
          "content": 1.0,
          "table_headers": 2.0,
          "heading": 1.5
        }
      },
      "functions": [
        {
          "type": "tag",
          "fieldName": "chunk_type",
          "boost": 2.0,
          "tag": {
            "tagsParameter": "boostChunkTypes"
          }
        }
      ],
      "functionAggregation": "sum"
    },
    {
      "name": "boost-recency",
      "functions": [
        {
          "type": "freshness",
          "fieldName": "doc_modified_date",
          "boost": 1.5,
          "freshness": {
            "boostingDuration": "P30D"
          },
          "interpolation": "linear"
        }
      ],
      "functionAggregation": "sum"
    },
    {
      "name": "boost-section-match",
      "text": {
        "weights": {
          "heading": 3.0,
          "section_path": 2.5,
          "content": 1.0
        }
      },
      "functionAggregation": "sum"
    }
  ],
  "defaultScoringProfile": null,
  "suggesters": [
    {
      "name": "suggest-content",
      "searchMode": "analyzingInfixMatching",
      "sourceFields": ["doc_title", "heading", "tags"]
    }
  ],
  "analyzers": [],
  "tokenizers": [],
  "tokenFilters": [],
  "charFilters": [],
  "corsOptions": {
    "allowedOrigins": ["*"],
    "maxAgeInSeconds": 300
  },
  "encryptionKey": null,
  "semantic": {
    "defaultConfiguration": "semantic-config",
    "configurations": [
      {
        "name": "semantic-config",
        "prioritizedFields": {
          "titleField": {
            "fieldName": "heading"
          },
          "prioritizedContentFields": [
            {
              "fieldName": "content"
            },
            {
              "fieldName": "content_md"
            }
          ],
          "prioritizedKeywordsFields": [
            {
              "fieldName": "tags"
            },
            {
              "fieldName": "entities"
            },
            {
              "fieldName": "table_headers"
            }
          ]
        }
      }
    ]
  },
  "vectorSearch": {
    "algorithms": [
      {
        "name": "hnsw-algorithm",
        "kind": "hnsw",
        "hnswParameters": {
          "m": 4,
          "efConstruction": 400,
          "efSearch": 500,
          "metric": "cosine"
        }
      },
      {
        "name": "exhaustive-knn",
        "kind": "exhaustiveKnn",
        "exhaustiveKnnParameters": {
          "metric": "cosine"
        }
      }
    ],
    "profiles": [
      {
        "name": "vector-profile-hnsw",
        "algorithm": "hnsw-algorithm",
        "vectorizer": "openai-vectorizer"
      },
      {
        "name": "vector-profile-exhaustive",
        "algorithm": "exhaustive-knn",
        "vectorizer": "openai-vectorizer"
      }
    ],
    "vectorizers": [
      {
        "name": "openai-vectorizer",
        "kind": "azureOpenAI",
        "azureOpenAIParameters": {
          "resourceUri": "${AZURE_OPENAI_ENDPOINT}",
          "deploymentId": "text-embedding-3-large",
          "modelName": "text-embedding-3-large",
          "apiKey": "${AZURE_OPENAI_KEY}"
        }
      }
    ]
  }
}
