  "vectorSearch": {
    "algorithms": [
      {
        "name": "hnsw-algorithm",
        "kind": "hnsw",
        "hnswParameters": {
          "m": 4,
          "efConstruction": 400,
          "efSearch": 500,
          "metric": "cosine"
        }
      },
      {
        "name": "exhaustive-knn-algorithm",
        "kind": "exhaustiveKnn",
        "exhaustiveKnnParameters": {
          "metric": "cosine"
        }
      }
    ],
    "profiles": [
      {
        "name": "vector-profile-hnsw",
        "algorithm": "hnsw-algorithm",
        "vectorizer": "azure-openai-vectorizer"
      },
      {
        "name": "vector-profile-exhaustive",
        "algorithm": "exhaustive-knn-algorithm",
        "vectorizer": "azure-openai-vectorizer"
      }
    ],
    "vectorizers": [
      {
        "name": "azure-openai-vectorizer",
        "kind": "azureOpenAI",
        "azureOpenAIParameters": {
          "resourceUri": "https://{{openai-resource-name}}.openai.azure.com",
          "deploymentId": "text-embedding-3-large",
          "modelName": "text-embedding-3-large",
          "authIdentity": {
            "type": "systemAssigned"
          }
        }
      }
    ]
  },
  "semantic": {
    "configurations": [
      {
        "name": "semantic-config",
        "prioritizedFields": {
          "titleField": {
            "fieldName": "title"
          },
          "prioritizedContentFields": [
            {
              "fieldName": "chunk_text"
            },
            {
              "fieldName": "heading_path"
            }
          ],
          "prioritizedKeywordsFields": [
            {
              "fieldName": "keywords"
            },
            {
              "fieldName": "entities"
            }
          ]
        }
      }
    ]
  },
  "suggesters": [
    {
      "name": "suggest-title",
      "searchMode": "analyzingInfixMatching",
      "sourceFields": ["title", "keywords"]
    }
  ],
  "scoringProfiles": [
    {
      "name": "recency-boost",
      "text": {
        "weights": {
          "title": 3,
          "chunk_text": 1,
          "keywords": 2
        }
      },
      "functions": [
        {
          "type": "freshness",
          "fieldName": "effective_date",
          "boost": 2,
          "interpolation": "linear",
          "freshness": {
            "boostingDuration": "P365D"
          }
        }
      ],
      "functionAggregation": "sum"
    },
    {
      "name": "relevance-boost",
      "text": {
        "weights": {
          "title": 5,
          "chunk_text": 2,
          "heading_path": 3,
          "keywords": 2
        }
      }
    }
  ],
  "corsOptions": {
    "allowedOrigins": ["*"],
    "maxAgeInSeconds": 300
  }
}
