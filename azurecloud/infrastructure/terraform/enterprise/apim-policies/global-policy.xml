<!--
===============================================================================
Enterprise AI Platform - APIM Global Policy
Rate Limiting, Authentication, Security Headers
===============================================================================
-->
<policies>
    <inbound>
        <!-- ================================================================
             AUTHENTICATION - Validate JWT from Entra ID
             ================================================================ -->
        <validate-jwt header-name="Authorization" failed-validation-httpcode="401" failed-validation-error-message="Unauthorized. Valid JWT required.">
            <openid-config url="https://login.microsoftonline.com/{{tenant-id}}/v2.0/.well-known/openid-configuration" />
            <audiences>
                <audience>api://enterprise-ai-platform</audience>
            </audiences>
            <issuers>
                <issuer>https://sts.windows.net/{{tenant-id}}/</issuer>
            </issuers>
            <required-claims>
                <claim name="oid" match="any" />
                <claim name="groups" match="any" />
            </required-claims>
        </validate-jwt>

        <!-- ================================================================
             RATE LIMITING - Per User (OID claim)
             ================================================================ -->
        <!-- Per-minute rate limit -->
        <rate-limit-by-key
            calls="60"
            renewal-period="60"
            counter-key="@(context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("oid", "anonymous"))"
            increment-condition="@(context.Response.StatusCode != 429)"
            retry-after-header-name="Retry-After"
            retry-after-variable-name="retryAfter"
            remaining-calls-header-name="X-RateLimit-Remaining"
            total-calls-header-name="X-RateLimit-Limit" />

        <!-- Daily quota -->
        <quota-by-key
            calls="5000"
            renewal-period="86400"
            counter-key="@(context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("oid", "anonymous"))"
            increment-condition="@(context.Response.StatusCode < 400)" />

        <!-- ================================================================
             ROLE-BASED RATE LIMITS - Higher limits for specific roles
             ================================================================ -->
        <choose>
            <!-- Executive/VIP users get higher limits -->
            <when condition="@(context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("roles", "").Contains("Executive"))">
                <rate-limit-by-key
                    calls="120"
                    renewal-period="60"
                    counter-key="@("exec-" + context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("oid", "anonymous"))" />
                <quota-by-key
                    calls="15000"
                    renewal-period="86400"
                    counter-key="@("exec-" + context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("oid", "anonymous"))" />
            </when>
            <!-- Service accounts -->
            <when condition="@(context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("roles", "").Contains("ServiceAccount"))">
                <rate-limit-by-key
                    calls="200"
                    renewal-period="60"
                    counter-key="@("svc-" + context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("oid", "anonymous"))" />
                <quota-by-key
                    calls="100000"
                    renewal-period="86400"
                    counter-key="@("svc-" + context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("oid", "anonymous"))" />
            </when>
        </choose>

        <!-- ================================================================
             IP-BASED RATE LIMITING - Prevent DDoS
             ================================================================ -->
        <rate-limit-by-key
            calls="300"
            renewal-period="60"
            counter-key="@(context.Request.IpAddress)" />

        <!-- ================================================================
             CORS HEADERS
             ================================================================ -->
        <cors allow-credentials="true">
            <allowed-origins>
                <origin>https://portal.enterprise.com</origin>
                <origin>https://teams.microsoft.com</origin>
            </allowed-origins>
            <allowed-methods preflight-result-max-age="300">
                <method>GET</method>
                <method>POST</method>
                <method>PUT</method>
                <method>DELETE</method>
                <method>OPTIONS</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
            <expose-headers>
                <header>X-RateLimit-Limit</header>
                <header>X-RateLimit-Remaining</header>
                <header>X-Request-Id</header>
            </expose-headers>
        </cors>

        <!-- ================================================================
             REQUEST VALIDATION
             ================================================================ -->
        <!-- Limit request body size (prevent large payloads) -->
        <set-variable name="requestBodySize" value="@(context.Request.Body.As<string>(preserveContent: true).Length)" />
        <choose>
            <when condition="@((int)context.Variables["requestBodySize"] > 102400)">
                <return-response>
                    <set-status code="413" reason="Payload Too Large" />
                    <set-body>{"error": "Request body exceeds maximum size of 100KB"}</set-body>
                </return-response>
            </when>
        </choose>

        <!-- ================================================================
             ADD TRACKING HEADERS
             ================================================================ -->
        <set-header name="X-Request-Id" exists-action="skip">
            <value>@(Guid.NewGuid().ToString())</value>
        </set-header>
        <set-header name="X-Correlation-Id" exists-action="skip">
            <value>@(context.Request.Headers.GetValueOrDefault("X-Correlation-Id", Guid.NewGuid().ToString()))</value>
        </set-header>

        <!-- Pass user context to backend -->
        <set-header name="X-User-Id" exists-action="override">
            <value>@(context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("oid", "anonymous"))</value>
        </set-header>
        <set-header name="X-User-Name" exists-action="override">
            <value>@(context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("name", ""))</value>
        </set-header>
        <set-header name="X-User-Groups" exists-action="override">
            <value>@(context.Request.Headers.GetValueOrDefault("Authorization","").Split(' ').Last().AsJwt()?.Claims.GetValueOrDefault("groups", "[]"))</value>
        </set-header>

        <!-- ================================================================
             LOGGING - Emit to Application Insights
             ================================================================ -->
        <trace source="apim-global" severity="information">
            <message>@{
                return new JObject(
                    new JProperty("requestId", context.Request.Headers.GetValueOrDefault("X-Request-Id", "")),
                    new JProperty("userId", context.Request.Headers.GetValueOrDefault("X-User-Id", "anonymous")),
                    new JProperty("method", context.Request.Method),
                    new JProperty("path", context.Request.Url.Path),
                    new JProperty("ip", context.Request.IpAddress)
                ).ToString();
            }</message>
        </trace>

    </inbound>

    <backend>
        <forward-request timeout="120" follow-redirects="false" buffer-request-body="true" />
    </backend>

    <outbound>
        <!-- ================================================================
             SECURITY HEADERS
             ================================================================ -->
        <set-header name="X-Content-Type-Options" exists-action="override">
            <value>nosniff</value>
        </set-header>
        <set-header name="X-Frame-Options" exists-action="override">
            <value>DENY</value>
        </set-header>
        <set-header name="Strict-Transport-Security" exists-action="override">
            <value>max-age=31536000; includeSubDomains</value>
        </set-header>
        <set-header name="Cache-Control" exists-action="override">
            <value>no-store, no-cache, must-revalidate</value>
        </set-header>
        <set-header name="Pragma" exists-action="override">
            <value>no-cache</value>
        </set-header>

        <!-- Remove server fingerprint headers -->
        <set-header name="X-Powered-By" exists-action="delete" />
        <set-header name="X-AspNet-Version" exists-action="delete" />

        <!-- Add rate limit headers to response -->
        <set-header name="X-RateLimit-Limit" exists-action="skip">
            <value>60</value>
        </set-header>

    </outbound>

    <on-error>
        <!-- ================================================================
             ERROR HANDLING
             ================================================================ -->
        <set-header name="X-Error-Source" exists-action="override">
            <value>@(context.LastError.Source)</value>
        </set-header>

        <choose>
            <!-- Rate limit exceeded -->
            <when condition="@(context.LastError.Reason == "RateLimitExceeded")">
                <return-response>
                    <set-status code="429" reason="Too Many Requests" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-header name="Retry-After" exists-action="override">
                        <value>@(context.Variables.GetValueOrDefault<int>("retryAfter", 60).ToString())</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("error", "rate_limit_exceeded"),
                            new JProperty("message", "You have exceeded the rate limit. Please retry after the specified time."),
                            new JProperty("retry_after_seconds", context.Variables.GetValueOrDefault<int>("retryAfter", 60))
                        ).ToString();
                    }</set-body>
                </return-response>
            </when>

            <!-- Quota exceeded -->
            <when condition="@(context.LastError.Reason == "QuotaExceeded")">
                <return-response>
                    <set-status code="429" reason="Quota Exceeded" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("error", "quota_exceeded"),
                            new JProperty("message", "You have exceeded your daily quota. Please contact support for increased limits.")
                        ).ToString();
                    }</set-body>
                </return-response>
            </when>

            <!-- Authentication failed -->
            <when condition="@(context.LastError.Source == "validate-jwt")">
                <return-response>
                    <set-status code="401" reason="Unauthorized" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("error", "unauthorized"),
                            new JProperty("message", "Invalid or expired authentication token.")
                        ).ToString();
                    }</set-body>
                </return-response>
            </when>

            <!-- Default error -->
            <otherwise>
                <return-response>
                    <set-status code="500" reason="Internal Server Error" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("error", "internal_error"),
                            new JProperty("message", "An unexpected error occurred. Please try again later."),
                            new JProperty("request_id", context.Request.Headers.GetValueOrDefault("X-Request-Id", ""))
                        ).ToString();
                    }</set-body>
                </return-response>
            </otherwise>
        </choose>

        <!-- Log errors -->
        <trace source="apim-error" severity="error">
            <message>@{
                return new JObject(
                    new JProperty("requestId", context.Request.Headers.GetValueOrDefault("X-Request-Id", "")),
                    new JProperty("errorSource", context.LastError.Source),
                    new JProperty("errorReason", context.LastError.Reason),
                    new JProperty("errorMessage", context.LastError.Message)
                ).ToString();
            }</message>
        </trace>
    </on-error>
</policies>
